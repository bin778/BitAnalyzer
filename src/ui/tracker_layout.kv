#:import OrderBookWidget ui.order_book_widget.OrderBookWidget

<PriceTrackerLayout>:
    orientation: 'vertical'
    padding: 10
    spacing: 10

    BoxLayout:
        orientation: 'horizontal'
        spacing: 10
        size_hint_y: 0.85
        
        OrderBookWidget:
            id: binance_ob
        OrderBookWidget:
            id: upbit_ob
        OrderBookWidget:
            id: bybit_ob

    BoxLayout:
        orientation: 'vertical'
        size_hint_y: 0.15
        padding: (0, 5, 0, 5)
        spacing: 2
        
        Label:
            id: analysis_label
            text: "K-Premium: Calculating..."
            font_size: '18sp'
            halign: 'center'
            valign: 'middle'
            color: (0.8, 0.8, 0.8, 1)
            size_hint_y: None
            height: self.texture_size[1] + dp(5)

        Label:
            id: timestamp_label
            text: "Last Updated: --:--:--"
            font_size: '12sp'
            halign: 'center'
            valign: 'middle'
            color: (0.7, 0.7, 0.7, 1)
            size_hint_y: None
            height: self.texture_size[1]