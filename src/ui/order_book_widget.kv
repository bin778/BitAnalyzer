            Label:
                id: ask_qty_4
                text: '-'
                color: (1, 1, 1, 0.7)
                size_hint_x: 0.4
                font_size: '12sp'
    Label:
        text: "Bids (Sell)"
        size_hint_y: 0.08
        color: (0.4, 1, 0.4, 1)
        font_size: '14sp'

    ScrollView:
        size_hint_y: 0.3
        GridLayout:
            cols: 2
            spacing: 2
            size_hint_y: None
            height: self.minimum_height
            row_default_height: '20dp'
            row_force_default: True
            
            Label:
                id: bid_price_0
