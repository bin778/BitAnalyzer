<OrderBookWidget>:
    orientation: 'vertical'
    spacing: 5
    padding: 5
    canvas.before:
        Color:
            rgba: (0.1, 0.1, 0.1, 1)
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [5]

    Label:
        id: title_label
        text: "Exchange"
        font_size: '18sp'
        bold: True
        size_hint_y: 0.15
    Label:
        id: trend_label
        text: "Trend: -"
        font_size: '14sp'
        size_hint_y: 0.1
        color: (0.8, 0.8, 0.8, 1)
    Label:
        text: "Asks (Buy)"
        size_hint_y: 0.08
        color: (1, 0.4, 0.4, 1)
        font_size: '14sp'
        
    ScrollView:
        size_hint_y: 0.3
        GridLayout:
            cols: 2
            spacing: 2
            size_hint_y: None
            height: self.minimum_height
            row_default_height: '20dp'
            row_force_default: True
            
            Label:
                id: ask_price_0
                text: '-'
                color: (1, 0.4, 0.4, 1)
                size_hint_x: 0.6
            Label:
                id: ask_qty_0
                text: '-'
                color: (1, 1, 1, 0.7)
                size_hint_x: 0.4
                font_size: '12sp'
            
            Label:
                id: ask_price_1
                text: '-'
                color: (1, 0.4, 0.4, 1)
                size_hint_x: 0.6
