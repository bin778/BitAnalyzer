<MarketItemRow>:
    orientation: 'horizontal'
    size_hint_y: None
    height: '40dp'
    padding: 10
    spacing: 10
    canvas.before:
        Color:
            rgba: (0.2, 0.2, 0.2, 1) if root.is_checked else (0.1, 0.1, 0.1, 1)
        Rectangle:
            pos: self.pos
            size: self.size

    # TODO: 체크박스를 사용자한테 선명하게 보일 수 있도록 수정
    CheckBox:
        id: checkbox
        active: root.is_checked
        size_hint_x: None
        width: '30dp'
        on_active: root.on_checkbox_active(self, self.active)

    Label:
        text: root.symbol
        size_hint_x: 0.4
        halign: 'left'
        valign: 'middle'
        text_size: self.size
    
    Label:
        text: root.base_coin
        size_hint_x: 0.2
        color: (0.7, 0.7, 0.7, 1)

    Label:
        text: root.quote_currency
        size_hint_x: 0.2
        color: (0.4, 0.8, 1, 1) if root.quote_currency in ['USDT', 'KRW'] else (0.6, 0.6, 0.6, 1)

<MarketExplorer>:
    orientation: 'vertical'
    padding: 10
    spacing: 10

    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: '40dp'
        spacing: 10
        Spinner:
            id: exchange_spinner
            text: 'Binance'
            values: ['Binance', 'Upbit', 'Bybit']
            size_hint_x: 0.3
            on_text: root.load_markets(self.text)
        TextInput:
            id: search_input
            hint_text: 'Search (e.g. BTC)'
            multiline: False
            size_hint_x: 0.4
            on_text: root.filter_list()
        Spinner:
            id: quote_spinner
            text: 'All'
            values: ['All', 'USDT', 'KRW', 'BTC', 'ETH']
            size_hint_x: 0.3
            on_text: root.filter_list()

    BoxLayout:
        size_hint_y: None
        height: '30dp'
        padding: 10
        spacing: 10
        Label:
            text: "Select"
            size_hint_x: None
            width: '40dp'
            bold: True
        Label:
            text: "Symbol"
            bold: True
            size_hint_x: 0.4
            halign: 'left'
            text_size: self.size
        Label:
            text: "Base"
            bold: True
            size_hint_x: 0.2
        Label:
            text: "Quote"
            bold: True
            size_hint_x: 0.2

    RecycleView:
        id: rv
        viewclass: 'MarketItemRow'
        scroll_type: ['bars', 'content']
        bar_width: 10
        
        RecycleBoxLayout:
            default_size: None, dp(40)
            default_size_hint: 1, None
            size_hint_y: None
            height: self.minimum_height
            orientation: 'vertical'
            spacing: 2

    Button:
        id: analyze_btn
        text: "Select 1-3 items"
        size_hint_y: None
        height: '50dp'
        background_color: (0.5, 0.5, 0.5, 1)
        on_release: root.dispatch_analysis()