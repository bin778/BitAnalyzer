#:import dp kivy.metrics.dp

<MarketItemRow>:
    orientation: 'horizontal'
    size_hint_y: None
    height: dp(50)
    padding: dp(10)
    spacing: dp(10)
    canvas.before:
        Color:
            rgba: (0.2, 0.2, 0.2, 1) if root.is_checked else (0.1, 0.1, 0.1, 1)
        Rectangle:
            pos: self.pos
            size: self.size
            
    CheckBox:
        id: checkbox
        size_hint_x: None
        width: dp(40)
        on_active: root.on_checkbox_active(self, self.active)
        
        canvas.before:
            Color:
                rgba: (0.1, 0.1, 0.1, 1)
            Rectangle:
                pos: int(self.center_x - dp(9)), int(self.center_y - dp(9))
                size: dp(18), dp(18)
            Color:
                rgba: (0.2, 0.6, 1, 1) if self.active else (0.5, 0.5, 0.5, 1)
            Line:
                width: dp(1.5)
                rectangle: (int(self.center_x - dp(9)), int(self.center_y - dp(9)), dp(18), dp(18))

    Label:
        text: root.symbol
        size_hint_x: 0.4
        halign: 'left'
        valign: 'middle'
        text_size: self.size
        font_size: '16sp'
        bold: True
    Label:
        text: root.base_coin
        size_hint_x: 0.2
        color: (0.7, 0.7, 0.7, 1)
        font_size: '14sp'
    Label:
        text: root.quote_currency
        size_hint_x: 0.2
        color: (0.4, 0.8, 1, 1) if root.quote_currency in ['USDT', 'KRW'] else (0.6, 0.6, 0.6, 1)
        font_size: '14sp'

<MarketExplorer>:
    orientation: 'vertical'
    padding: dp(10)
    spacing: dp(10)

    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: dp(40)
        spacing: dp(10)
        Spinner:
            id: exchange_spinner
            text: 'Binance'
            values: ['Binance', 'Upbit', 'Bybit']
            size_hint_x: 0.3
            background_color: (0.2, 0.2, 0.2, 1)
            on_text: root.load_markets(self.text)
        TextInput:
            id: search_input
            hint_text: 'Search (e.g. BTC)'
            multiline: False
            size_hint_x: 0.4
            background_color: (0.9, 0.9, 0.9, 1)
            foreground_color: (0, 0, 0, 1)
            padding_y: [self.height / 2.0 - (self.line_height / 2.0), 0]
            on_text: root.filter_list()
        Spinner:
            id: quote_spinner
            text: 'All'
            values: ['All', 'USDT', 'KRW', 'BTC', 'ETH']
            size_hint_x: 0.3
            background_color: (0.2, 0.2, 0.2, 1)
            on_text: root.filter_list()

    BoxLayout:
        size_hint_y: None
        height: dp(40)
        padding: dp(10)
        spacing: dp(10)
        canvas.before:
            Color:
                rgba: (0.15, 0.15, 0.15, 1)
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            text: "Select"
            size_hint_x: None
            width: dp(40)
            bold: True
            font_size: '13sp'
        Label:
            text: "Symbol"
            bold: True
            size_hint_x: 0.4
            halign: 'left'
            text_size: self.size
            font_size: '13sp'
        Label:
            text: "Base"
            bold: True
            size_hint_x: 0.2
            font_size: '13sp'
        Label:
            text: "Quote"
            bold: True
            size_hint_x: 0.2
            font_size: '13sp'
    RecycleView:
        id: rv
        viewclass: 'MarketItemRow'
        scroll_type: ['bars', 'content']
        bar_width: dp(10)
        
        RecycleBoxLayout:
            default_size: None, dp(50)
            default_size_hint: 1, None
            size_hint_y: None
            height: self.minimum_height
            orientation: 'vertical'
            spacing: dp(2)
    Button:
        id: analyze_btn
        text: "Select 1-3 items"
        size_hint_y: None
        height: dp(50)
        background_normal: ''
        background_color: (0.5, 0.5, 0.5, 1)
        bold: True
        font_size: '16sp'
        on_release: root.dispatch_analysis()